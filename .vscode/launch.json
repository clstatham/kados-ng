{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Run QEMU (aarch64)",
            "initCommands": [
                "platform select remote-gdb-server",
            ],
            "targetCreateCommands": [
                "target create ${workspaceFolder}/target/aarch64-kados/debug/kernel",
            ],
            "processCreateCommands": [
                "gdb-remote 127.0.0.1:1234"
            ]
        },
        {
